{
    "name": "part_two_schema",
    "strict": true,
    "schema": {
        "type": "object",
        "properties": {
            "genre": {
                "type": "string",
                "enum": [
                    "Fantasia",
                    "Ficção Ciêntifica",
                    "Mistério",
                    "Noir",
                    "História",
                    "Distopia",
                    "Utopia",
                    "Terror",
                    "Romance",
                    "Comédia",
                    "Thriller",
                    "Western",
                    "Épico",
                    "Poesia",
                    "Fábula",
                    "Reportagem",
                    "Aventura",
                    "Realismo"
                ]
            },
            "protagonists": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "O leitor",
                            "O grupo de participantes"
                        ]
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "description"
                ],
                "additionalProperties": false
            },
            "scenario": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "Localização",
                            "Contexto Temporal",
                            "Contexto Social"
                        ]
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "description"
                ],
                "additionalProperties": false
            },
            "narrator": {
                "type": "string"
            },
            "objective": {
                "type": "string"
            },
            "element_of_suspense": {
                "type": "string"
            }
        },
        "required": [
            "genre",
            "protagonists",
            "scenario",
            "narrator",
            "objective",
            "element_of_suspense"
        ],
        "additionalProperties": false
    }
}