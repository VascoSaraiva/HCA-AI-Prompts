{
    "name": "one_step_schema",
    "strict": true,
    "schema": {
        "type": "object",
        "properties": {
            "real_context": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "typology": {
                        "type": "string"
                    },
                    "areas": {
                        "type": "array",
                        "minItems": 3,
                        "items": {
                            "type": "string"
                        }
                    },
                    "fundamental_skills": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                            "type": "string",
                            "enum": [
                                "Linguagens e textos",
                                "Desenvolvimento pessoal e autonomia",
                                "Informação e comunicação",
                                "Bem-estar, saúde e ambiente",
                                "Raciocínio e resolução de problemas",
                                "Sensibilidade estética e artística",
                                "Pensamento crítico e pensamento criativo",
                                "Saber científico, técnico e tecnológico",
                                "Relacionamento interpessoal",
                                "Consciências e domínio do corpo"
                            ]
                        }
                    },
                    "participants": {
                        "type": "string"
                    },
                    "organizers": {
                        "type": "string"
                    },
                    "volunteers": {
                        "type": "string"
                    },
                    "to_recognize": {
                        "type": "array",
                        "minItems": 8,
                        "items": {
                            "type": "string"
                        }
                    },
                    "objective": {
                        "type": "string"
                    },
                    "duration": {
                        "type": "object",
                        "properties": {
                            "start": {
                                "type": "integer",
                                "description": "Unix timestamp (seconds since epoch)"
                            },
                            "end": {
                                "type": "integer",
                                "description": "Unix timestamp (seconds since epoch)"
                            }
                        },
                        "required": [
                            "start",
                            "end"
                        ],
                        "additionalProperties": false
                    },
                    "key_moment": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "description",
                    "typology",
                    "areas",
                    "fundamental_skills",
                    "participants",
                    "organizers",
                    "volunteers",
                    "to_recognize",
                    "objective",
                    "duration",
                    "key_moment"
                ],
                "additionalProperties": false
            },
            "fictional_context": {
                "type": "object",
                "properties": {
                    "genre": {
                        "type": "string",
                        "enum": [
                            "Fantasia",
                            "Ficção Ciêntifica",
                            "Mistério",
                            "Noir",
                            "História",
                            "Distopia",
                            "Utopia",
                            "Terror",
                            "Romance",
                            "Comédia",
                            "Thriller",
                            "Western",
                            "Épico",
                            "Poesia",
                            "Fábula",
                            "Reportagem",
                            "Aventura",
                            "Realismo"
                        ]
                    },
                    "protagonists": {
                        "type": "string"
                    },
                    "scenario": {
                        "type": "string"
                    },
                    "narrator": {
                        "type": "string"
                    },
                    "objective": {
                        "type": "string"
                    },
                    "element_of_suspense": {
                        "type": "string"
                    },
                    "text": {
                        "type": "object",
                        "properties": {
                            "chapter_1": {
                                "type": "string"
                            },
                            "chapter_2": {
                                "type": "string"
                            },
                            "chapter_3": {
                                "type": "string"
                            },
                            "chapter_4": {
                                "type": "string"
                            },
                            "chapter_5": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "chapter_1",
                            "chapter_2",
                            "chapter_3",
                            "chapter_4",
                            "chapter_5"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "genre",
                    "protagonists",
                    "scenario",
                    "narrator",
                    "objective",
                    "element_of_suspense",
                    "text"
                ],
                "additionalProperties": false
            }
        },
        "required": [
            "real_context",
            "fictional_context"
        ],
        "additionalProperties": false
    }
}